{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'includes/navBar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="row">
        {% if error %}
            <div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    <form action="{{ path('admin-login') }}" method="post">
        <label for="username">Username:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input class="form-control" type="password" id="password" name="_password"/>

        <input type="hidden" name="_target_path" value="/admin"/>

        <button class="btn btn-warning" type="submit" style="margin-top: 10px">login</button>
    </form>
{% endblock %}