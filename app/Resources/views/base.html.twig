<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Training Factory Den Haag{% endblock %}</title>
        {% block stylesheets %}
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="row">
            <div class="col-2 d-flex justify-content-center align-items-center">
                 <a class="nav-link" href="{{ path('homepage') }}">
                    <img class="w-100" src="{{ asset('images/tfdh_logo.png') }}">
                 </a>
            </div>
            <h1 class="col-8 d-flex justify-content-center align-items-center">Training Factory Den Haag</h1>
            <div class="col-2 d-flex justify-content-around align-items-center flex-column">
                {{ name }}
                <button class="btn btn-outline-primary">Uitloggen</button>
            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('lesson_create') }}">Les aanmaken</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('training_index') }}">Trainingen weergeven</a>
                </li>
            </ul>
        </nav>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="container pt-3 pb-3">
        {% block content %}{% endblock %}
        </div>
        <footer class="row d-flex flex-column justify-content-center align-items-center bg-info pb-2 pt-2">
            <h5>Training Factory Den Haag 010 519 0532</h5>
            <span>Developed by Leon van der Noll 2019</span>
        </footer>
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
