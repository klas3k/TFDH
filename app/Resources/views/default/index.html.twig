{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'includes/navBar.html.twig' %}
{% endblock %}

{% block content %}

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4 text-white">
        <h1 class="display-3">Training Factory Den Haag</h1>
        <p class="lead">Training Factory Den Haag is een sportschool waar onder professionele begeleiding in een veilige omgeving verschillende soorten martial arts-, indoor bootcamp, personal- en small group trainingen worden aangebode.  Hier kan je je inschrijven op een les of uitschrijven op een les.</p>
        {% if user is defined and user is not null %}
            <p>Welkom! {{ user.prefix }} {{ user.lastname }}</p>
        {% else %}
            <a href="{{ path('register') }}" class="btn btn-warning btn-lg">Aanmelden</a>
            <a href="{{ path('login') }}" class="btn btn-warning btn-lg">Log in</a>
        {% endif %}
    </header>

    <!-- Page Features -->
    <div class="row text-center">
        {% for training in trainingen %}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="http://placehold.it/500x325" alt="">
                <div class="card-body">
                    <h4 class="card-title">{{ training.name }}</h4>
                    <p class="card-text">{{ training.description }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('trainingDetail', {'id':training.id}) }}" class="btn btn-warning">Lees meer</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

</div>
{% endblock %}

{% block footer %}
    <footer class="py-5 bg-dark" style="position: relative">
        <div class="container">
            <p class="m-0 text-center text-warning">Copyright &copy; Training Factory Den Haag 2019</p>
        </div>
    </footer>
{% endblock %}
